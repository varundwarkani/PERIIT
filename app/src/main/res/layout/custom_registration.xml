<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#27304C"
    >

    <TextView
        android:id="@+id/tvCustomRegistrationTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please enter the following details"
        android:layout_marginLeft="23dp"
        android:textSize="16sp"
        android:padding="8dp"
        android:layout_marginBottom="5dp"
        android:textColor="#fff"
        android:background="#27304C"
        />


    <EditText
        android:id="@+id/etCustomRegistrationNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your 10 digit phone number"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:inputType="number"
        android:maxLength="10"
        android:background="#fff"
        android:padding="15dp"
        />

    <EditText
        android:id="@+id/etCustomRegistrationName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your Name"
        android:maxLength="30"
        android:imeOptions="actionNext"
        android:singleLine="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="#fff"
        android:padding="15dp"
        />

    <EditText
        android:id="@+id/etCustomRegistrationrollno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your Roll No"
        android:layout_marginLeft="10dp"
        android:imeOptions="actionNext"
        android:singleLine="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:inputType="number"
        android:maxLength="12"
        android:background="#fff"
        android:padding="15dp"
        />

    <Spinner
        android:id="@+id/etCustomRegistrationdept"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your Dept"
        android:entries="@array/dept"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:inputType="text"
        android:background="#fff"
        android:padding="15dp"
        />

    <Spinner
        android:id="@+id/etCustomRegistrationyear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your Year"
        android:entries="@array/year"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:inputType="number"
        android:background="#fff"
        android:padding="15dp"
        />

    <Spinner
        android:id="@+id/etCustomRegistrationsection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your section"
        android:entries="@array/section"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:inputType="number"
        android:background="#fff"
        android:padding="15dp"
        />


    <Button
        android:id="@+id/btCustomRegistrationLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Signup"
        android:layout_marginTop="20dp"
        android:background="#CF4332"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="#fff"
        android:layout_marginBottom="10dp"
        />

</LinearLayout>